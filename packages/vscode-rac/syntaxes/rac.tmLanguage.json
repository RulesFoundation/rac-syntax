{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RAC",
  "scopeName": "source.rac",
  "fileTypes": ["rac"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#statute-text" },
    { "include": "#declarations" },
    { "include": "#attributes" },
    { "include": "#block-scalars" },
    { "include": "#imports" },
    { "include": "#dates" },
    { "include": "#percentages" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#types" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#strings" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rac",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.rac",
          "match": "//.*$"
        }
      ]
    },
    "statute-text": {
      "patterns": [
        {
          "name": "string.quoted.triple.rac",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.rac" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.rac" }
          }
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "match": "^(text)\\s*(:)",
          "captures": {
            "1": { "name": "keyword.declaration.rac" },
            "2": { "name": "punctuation.separator.colon.rac" }
          }
        },
        {
          "match": "^(versions|references)\\s*(:)",
          "captures": {
            "1": { "name": "keyword.declaration.rac" },
            "2": { "name": "punctuation.separator.colon.rac" }
          }
        },
        {
          "match": "^(enum|function|module|version|jurisdiction|import)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "keyword.declaration.rac" },
            "2": { "name": "entity.name.function.rac" },
            "3": { "name": "punctuation.separator.colon.rac" }
          }
        },
        {
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "entity.name.function.rac" },
            "2": { "name": "punctuation.separator.colon.rac" }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "match": "^\\s+(description|unit|source|reference|imports|entity|period|dtype|label|default|name|metadata|enacted_by|reverts_to|parameters|threshold|cap|defined_for|private|internal)\\s*(:)",
          "captures": {
            "1": { "name": "support.type.property-name.rac" },
            "2": { "name": "punctuation.separator.colon.rac" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.rac",
          "match": "\\b(Person|TaxUnit|Household|Family|SPMUnit|Year|Month|Day|Instant|Money|Rate|Boolean|Integer|String|USD)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rac",
          "match": "\\b(if|else|elif|return|for|break|and|or|not|in|as|True|False|None|let|match|case|from)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.rac",
          "match": "\\b(max|min|abs|round|sum|len|interpolate)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rac",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.rac" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.rac" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.rac",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.rac",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.rac" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.rac" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.rac",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "block-scalars": {
      "patterns": [
        {
          "name": "keyword.operator.block-scalar.rac",
          "match": "(?<=:\\s)[|>](?:\\s*$)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.rac",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.rac",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "dates": {
      "patterns": [
        {
          "name": "constant.numeric.date.rac",
          "match": "\\b\\d{4}-\\d{2}-\\d{2}\\b"
        }
      ]
    },
    "percentages": {
      "patterns": [
        {
          "name": "constant.numeric.percentage.rac",
          "match": "\\b\\d+(\\.\\d+)?%"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "name": "string.unquoted.import-path.rac",
          "match": "\\b\\d+(/[a-zA-Z0-9_]+)+#[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rac",
          "match": "==|!=|<=|>=|=>|[=<>!+\\-*/%?]"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.rac",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.rac",
          "match": "[{}\\[\\](),:.]"
        }
      ]
    }
  }
}
